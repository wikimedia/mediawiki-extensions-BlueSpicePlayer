{
	"name": "BlueSpicePlayer",
	"version": "5.2.1",
	"license-name": "GPL-3.0-only",
	"url": "https://en.wiki.bluespice.com/wiki/Reference:BlueSpicePlayer",
	"author": [
		"Tobias Weichart",
		"Markus Glaser"
	],
	"descriptionmsg": "bs-player-extension-description",
	"type": "bluespice",
	"requires": {
		"MediaWiki": ">= 1.43.0"
	},
	"attributes": {
		"BlueSpiceFoundation": {
			"Extensions": {
				"BlueSpicePlayer": {
					"className": "\\BlueSpice\\Player\\Extension",
					"extPath": "/BlueSpicePlayer",
					"package": "BlueSpice Pro"
				}
			}
		}
	},
	"MessagesDirs": {
		"BlueSpicePlayer": [
			"i18n"
		]
	},
	"AutoloadNamespaces": {
		"BlueSpice\\Player\\": "src/"
	},
	"ResourceModules": {
		"ext.bluespice.showtime": {
			"scripts": [
				"vendor/plyr/js/plyr.js",
				"bluespice.bluespiceplayer.js"
			],
			"styles": [
				"vendor/plyr/css/plyr.css",
				"plyr.settings.css"
			]
		}
	},
	"ResourceFileModulePaths": {
		"localBasePath": "resources",
		"remoteExtPath": "BlueSpicePlayer/resources"
	},
	"config_prefix": "bsg",
	"config": {
		"ShowtimePrefWidth": {
			"value": 320,
			"descriptionmsg": "bs-player-config-prefwidth"
		},
		"ShowtimePrefHeight": {
			"value": 240,
			"descriptionmsg": "bs-player-config-prefheight"
		}
	},
	"HookHandlers": {
		"registerTags": {
			"class": "\\BlueSpice\\Player\\Hook\\RegisterTags",
			"services": [ "ConfigFactory" ]
		}
	},
	"Hooks": {
		"MWStakeGenericTagHandlerInitTags": "registerTags"
	},
	"manifest_version": 2
}
